{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build C++11 with threads",
            "type": "shell",
            "command": "C:\\MinGW\\bin\\g++.exe",
            "args": [
                "-std=c++11",
                "${file}",
                "-o",
                "${fileBasenameNoExtension}.exe",
                "-pthread"
